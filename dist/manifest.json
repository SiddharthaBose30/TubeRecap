{
    "version": "1.0.0",
    "manifest_version": 2,
    "name": "TubeRecap",
    "permissions": [ 
      "tabs",
      "activeTab",
      "webNavigation"
    ],
    "description": "This is a Chrome extension built with React and TypeScript for summarizing Youtube Videos on the go",
    "browser_action": {
        "default_popup": "js/index.html",
        "default_title": "TubeRecap chrome extension"
    },
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["js/content.js"]
        }
      ],
      "background": {
        "scripts": ["background.js"],
        "persistent": false
      }
}